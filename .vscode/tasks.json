{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "Ë†$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Compiling...",
          "endsPattern": "Compiled .*"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/app"
      }
    },
    {
      "label": "start jest on open",
      "command": "${command:io.orta.jest.start}",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
